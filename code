            if(refineInput && !loading && currentRecipe) refineInput.placeholder = 'ìˆ˜ì • ìš”ì²­ì„ ì…ë ¥í•˜ì„¸ìš”...';
            if(refineButton) refineButton.textContent = loading ? 'ìˆ˜ì • ì¤‘...' : 'ìˆ˜ì • ìš”ì²­';
        }
        
        function getDifficulty() {
